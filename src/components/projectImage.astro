---
import { Picture } from "@astrojs/image/components";
const {
    src = "",
    alt = "",
    before = false,
    description = "",
    ...rest
} = Astro.props;
---

<div class="relative h-fit p-2 border shadow-sm">
    {
        before && (
            <div class="mt-2 p-4 text-md absolute top-0 left-1/2 -translate-x-1/2 z-10 bg-black bg-opacity-50 text-white">
                Before
            </div>
        )
    }
    <Picture
        src={src}
        alt={alt}
        widths={[200, 400, 600]}
        sizes="(max-width: 800px) 100vw, 800px"
        formats={["avif", "jpeg", "png", "webp"]}
        aspectRatio="1:1"
        class="rounded w-full h-full object-cover overflow-hidden mb-2"
    />
    <p class="p-4">{description}</p>
</div>
