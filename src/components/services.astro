---
import { Picture } from "@astrojs/image/components";

const servicesCollection = [
    {
        name: "Bathroom Remodel",
        title: "",
        img: {
            src: "/unsplash/b.jpg",
            alt: "Image of bathroom remodel",
        },
        publishDate: "2022-11-08 15:39",
        to: "/projects/bathrooms",
    },
    {
        name: "Major Renovation",
        title: "",
        img: {
            src: "/unsplash/o.jpg",
            alt: "Image of interior major renovation",
        },
        publishDate: "2022-11-07 15:39",
        to: "/projects/other",
    },
    {
        name: "Kitchen Remodel",
        title: "",
        img: { src: "/unsplash/k.jpg", alt: "Image of kitchen remodel" },
        publishDate: "2022-11-09 15:39",
        to: "/projects/kitchens",
    },
];
---

<>
    <div class="mx-auto max-w-5xl mt-16 items-center justify-center">
        <div class="mx-5 grid md:grid-cols-2 gap-8">
            <div>
                <h2 class="mb-4 font-bold text-3xl text-gray-800">
                    Experts in Additions & Remodeling
                </h2>
                <p class="text-sm leading-relaxed text-slate-600">
                    <ul>
                        <li>
                            <span class="font-bold text-xl text-gray-800"
                                >Additions:</span
                            >
                            <br /><p class="text-sm text-slate-700">
                                Expand your living space with expertly crafted
                                additions that seamlessly blend with your home's
                                existing structure.
                            </p>
                        </li>
                        <li>
                            <span class="text-xl font-bold text-gray-800"
                                >Kitchen Remodels:</span
                            >
                            <br /><p class="text-sm text-slate-700">
                                Create a space tailored to your style and needs,
                                with innovative designs and functional layouts.
                            </p>
                        </li>
                        <li>
                            <span class="text-xl font-bold text-gray-800"
                                >Bathroom Renovations:</span
                            >
                            <br /><p class="text-sm text-slate-700">
                                Transform your bathrooms into luxurious retreats
                                with our attention to detail and premium
                                finishes.
                            </p>
                        </li>
                        <li>
                            <span class="text-xl font-bold text-gray-800"
                                >Outdoor Living:</span
                            >
                            <br />
                            <p class="text-sm text-slate-700">
                                Enhance your outdoor spaces with stunning
                                patios, decks, landscaping, and more.
                            </p>
                        </li>
                        <li>
                            <span class="text-xl font-bold text-gray-800"
                                >General Home Improvements:</span
                            >
                            <br /><p class="text-sm text-slate-700">
                                From flooring to roofing, painting to electrical
                                work, our skilled team covers all aspects of
                                home improvement.
                            </p>
                        </li>
                    </ul>
                </p>
            </div>
            <div class="hidden md:flex justify-center items-center">
                <Picture
                    src="/unsplash/o.jpg"
                    widths={[200, 400, 800]}
                    sizes="(max-width: 800px) 100vw, 800px"
                    formats={["avif", "jpeg", "png", "webp"]}
                    alt="The Astro logo"
                    aspectRatio="1:1"
                    class="rounded"
                />
            </div>
        </div>
        <div class="my-16 flex w-full items-center justify-center">
            <a
                class="text-base leading-relaxed text-slate-900 border w-fit px-8 py-2 bg-slate-100 rounded"
                href="/projects">View All Projects</a
            >
        </div>
    </div>
    <div class="grid md:grid-cols-3 gap-1 mx-auto mt-12 px-5">
        {
            servicesCollection.map((item, i) => (
                <div class="group relative overflow-hidden">
                    <div class="transition group-hover:scale-105 group-hover:shadow-xl">
                        <a href={item.to}>
                            <div
                                class="mt-4 text-center absolute top-1/2 left-1/2 z-10 font-bold"
                                style={{ transform: "translate(-50%,-200%)" }}>
                                <h2 class="text-xl text-gray-800 text-bold">
                                    {item.name}
                                </h2>
                            </div>
                            <div class="w-full aspect-square">
                                <Picture
                                    src={item.img.src}
                                    alt={item.img.alt}
                                    widths={[200, 400, 600]}
                                    sizes="(max-width: 800px) 100vw, 800px"
                                    formats={["avif", "jpeg", "png", "webp"]}
                                    aspectRatio="1:1"
                                    class="rounded w-full h-full object-cover overflow-hidden"
                                />
                            </div>
                        </a>
                    </div>
                </div>
            ))
        }
    </div>
</>
