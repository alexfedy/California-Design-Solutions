---
interface Props {
  href: string;
  size?: "md" | "lg";
  block?: boolean;
  style?: "transparent" | "outline" | "primary" | "inverted" | "muted";
  class?: string;
  [x: string]: any;
}

const {
  href,
  block,
  size = "lg",
  style = "primary",
  class: className,
  ...rest
} = Astro.props;

const sizes = {
  lg: "px-5 py-2.5",
  md: "px-4 py-2",
};

const styles = {
  transparent:
    "bg-transparent border-2 border-white-800 text-white backdrop-blur hover:backdrop-sepia",
  outline:
    "bg-transparent border-2 border-gray-400 text-gray-400 hover:backdrop-sepia",
  primary:
    "bg-zinc-950 text-white hover:bg-gray-800 border-2 border-transparent",
  inverted: "bg-white text-gray-800  border-2 border-transparent",
  muted: "bg-gray-100 hover:bg-gray-200   border-2 border-transparent",
};
---

<a
  href={href}
  {...rest}
  class:list={[
    "rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
    block && "w-full",
    sizes[size],
    styles[style],
    className,
  ]}
  ><slot />
</a>
