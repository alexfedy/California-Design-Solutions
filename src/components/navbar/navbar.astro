---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "About",
    path: "/about",
  },
  {
    title: "Projects",
    path: "/projects",
  },
  {
    title: "Reviews",
    path: "/reviews",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header
    class="flex flex-col lg:flex-row justify-between items-center my-5 px-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-md md:text-lg"
          ><span class="font-bold text-slate-800">CaliforniaDesign</span><span
            class="text-slate-500">Solutions</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                <li>
                  <a
                    href={item.path}
                    class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                    {item.title}
                  </a>
                </li>
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <!-- <Link href="#" style="muted" block size="md">Log in</Link> -->
          <Link href="/contact" size="md" block>Schedule an Appointment</Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <!-- <a href="#">Log in</a> -->
        <Link href="/contact" size="md">Schedule an Appointment</Link>
      </div>
    </div>
  </header>
</Container>
