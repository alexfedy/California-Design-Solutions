---
import { SEO } from "astro-seo";
import "@fontsource-variable/open-sans";

export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.png",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "California Design Solutions"
  : "California Design Solutions - Sacramento Home Improvement and Renovation";
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<meta name="generator" content={Astro.generator} />

<!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
<SEO
  title={makeTitle}
  description="California Design Solutions is a Sacramento Home Improvement and Renovation Contractor"
  canonical={canonicalURL}
  openGraph={{
    basic: {
      url: canonicalURL,
      type: "website",
      title: `California Design Solutions`,
      image: resolvedImageWithDomain,
    },
    image: {
      alt: "California Design Solutions Homepage Screenshot",
    },
  }}
/>
