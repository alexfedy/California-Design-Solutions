---
import { getCollection } from "astro:content";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Image } from "astro:assets";
import BaseHead from "@layouts/BaseHead.astro";
import Navbar from "@components/navbar/navbar.astro";
import Footer from "@components/footer.astro";
// import { projectList } from "../content/_projects";

// Filter blog entries with 'draft: false' & date before current date
const projectEntires = await getCollection("project", ({ data }) => {
  return data;
});

// Sort content entries by publication date
projectEntires.sort(function (a, b) {
  return (
    new Date(b.data.publishDate).valueOf() -
    new Date(a.data.publishDate).valueOf()
  );
});
---

<html lang="en" class="antialiased break-words">
  <head>
    <BaseHead title="Projects" />
    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-QZ7M5SN5FX"></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-QZ7M5SN5FX");
    </script>
  </head>
  <body>
    <Navbar />
    <Container>
      <Sectionhead>
        <Fragment slot="title">Our Projects</Fragment>
        <Fragment slot="desc">A showcase of our completed work.</Fragment>
      </Sectionhead>
      <main class="mt-16 px-5">
        <div class="m-8 md:m-16">
          <ul class="grid gap-16 max-w-4xl mx-auto">
            {
              projectEntires.map((blogPostEntry, index) => (
                <li>
                  <a href={`/projects/${blogPostEntry.slug}`}>
                    <div class="grid md:grid-cols-2 gap-5 md:gap-10 items-center">
                      <div class="w-full h-64 md:h-80 rounded-md overflow-hidden">
                        <Image
                          src={blogPostEntry.data.image.src}
                          alt={blogPostEntry.data.image.alt}
                          width={200}
                          height={200}
                          sizes="(max-width: 800px) 100vw, 800px"
                          loading={index <= 2 ? "eager" : "lazy"}
                          class="w-full h-full rounded-md object-cover object-center"
                        />
                      </div>
                      <div>
                        <h2 class="text-3xl font-semibold leading-snug tracking-tight mt-1 ">
                          {blogPostEntry.data.title}
                        </h2>

                        <div class="flex gap-2 mt-3">
                          <span class="text-gray-400">â€¢ </span>
                          <span class="text-gray-400">
                            {blogPostEntry.data.publishDate}
                          </span>
                        </div>
                      </div>
                    </div>
                  </a>
                </li>
              ))
            }
          </ul>
